<BorderPane maxHeight="Infinity" maxWidth="Infinity" stylesheets="/css/index.css"
            prefHeight="618.0" prefWidth="934.0" fx:id="container"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.unclezs.gui.controller.IndexController">
    <left>
        <VBox fx:id="menu" prefHeight="470.0" prefWidth="180" minHeight="470" styleClass="menu-pane" spacing="2">
