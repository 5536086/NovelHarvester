                <graphic>
                    <Glyph icon="&#xf001;"/>
                </graphic>
            </JFXButton>
            <!--读书-->
            <Label styleClass="menu-label" text="%read_book"/>
            <JFXButton userData="com.unclezs.gui.controller.BookShelfController" styleClass="menu-btn"
                       text="%text_bookshelf">
                <graphic>
                    <Glyph icon="&#xf02d;"/>
                </graphic>
            </JFXButton>
            <JFXButton userData="com.unclezs.gui.controller.AudioBookSelfController" text="%audio_bookshelf"
                       styleClass="menu-btn">
                <graphic>
                    <Glyph icon="&#xf028;"/>
                </graphic>
            </JFXButton>
            <!--下书-->
            <Label styleClass="menu-label" text="%download_book"/>
            <JFXButton userData="com.unclezs.gui.controller.AnalysisController" text="%analysis_text"
                       styleClass="menu-btn">
                <graphic>
                    <Glyph icon="&#xf260;"/>
                </graphic>
            </JFXButton>
            <JFXButton userData="com.unclezs.gui.controller.DownloadController" text="%download_manager"
                       styleClass="menu-btn">
                <graphic>
                    <Glyph icon="&#xf0ed;"/>
                </graphic>
            </JFXButton>
