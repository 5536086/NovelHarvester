                    <Glyph icon="&#xf010;"/>
                </graphic>
            </JFXButton>
            <JFXButton userData="com.unclezs.gui.controller.SearchAllSiteController" text="%search_all"
                       styleClass="menu-btn">
                <graphic>
                    <Glyph icon="&#xf26c;"/>
                </graphic>
            </JFXButton>
            <JFXButton userData="com.unclezs.gui.controller.SearchAudioController" text="%search_audio"
